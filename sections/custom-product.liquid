    <script>

  const customtext = document.querySelector(".customtext p");

customtext.innerHTML = customtext.innerText
	.split("")
	.map(
		(char, i) => `<span style="transform:rotate(${i * 15}deg)">${char}</span>`
	)
	.join("");
  
</script>

