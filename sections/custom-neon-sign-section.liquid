<div class = "custom-neon-section page-width">
<h2>{{ section.settings.heading }}</h2>
  {{ section.settings.description }}
  <div class = "row ">
  <div class = "first-col">
      <img class="lazyload " data-src="{{ section.settings.img | img_url: '1920x'}}">
      <h3>{{ section.settings.name }} </h3>
    <a href = "{{ section.settings.link }}" class = "neon-sign-section">{{ section.settings.paragraph }}</a>
  </div>
    <div class = "second-col">
          <img class="lazyload " data-src="{{ section.settings.img1 | img_url: '1920x'}}">
          <h3>{{ section.settings.name1 }} </h3>
          <a href = "{{ section.settings.link1 }}" class = "neon-sign-section">{{ section.settings.paragraph1 }}</a>
    </div>
  </div>
</div>


